{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "TOP 10% GDP",
    "width": 800,
    "height": 400,
    "layer": [
        {
            "projection": {
                "type": "equalEarth"
            },
            "data": {
                "url": "https://raw.githubusercontent.com/Reachsangmonash/Fit3179_Vis2/main/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgrey",
                "stroke": "white",
            }
        },
        {
            "projection": {
                "type": "equalEarth"
            },
            
            "data": {
                            "url": "https://raw.githubusercontent.com/Reachsangmonash/Fit3179_Vis2/main/Countries%203.csv"
                        },
            "transform": [
                  {
                    "calculate": "datum.GDP/1000000000",
                    "as": "GDP per billion (x1000000000)"
                },
                {
                    "lookup": "Country Name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Reachsangmonash/Fit3179_Vis2/main/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                            }
                        },
                    "key": "properties.NAME"
                    },
                    "as": "geo"
                },
                {
                    
                }
            ],
            "mark":"geoshape",
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type":"geojson"
                },
                "color": {
                    "field": "GDP per billion (x1000000000)",
                    "scale": {
                        "type": "linear"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "GDP per billion (x1000000000)",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}
